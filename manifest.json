{
    "manifest_version": 2,
    "name": "Bronson's Pixel Painter Chrome Add On",
    "description": "Draw anything you want in a portable paint application with a stunning easter egg.",
    "version": "1",
    "author": "Chaz",

    "content_scripts": [{
        "css": ["main.css"],
        "js": ["content.js"],
        "matches": ["*://*/*"]
    }],
    
    "icons": { "16": "bpp16.png",
           "48": "bpp48.png",
          "128": "bpp128.png" },
    
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "bpp2.png"
    },

    "permissions": ["activeTab"]
}
